<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To Autism Helper"
        android:textSize="24sp"
        android:textColor="#00574B"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/alphabetImage"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/alphabet_img"
        android:layout_below="@id/titleText"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:alpha="0.5" /> <!-- Set transparency here -->



    <Button
        android:id="@+id/languageGameButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Language Game"
        android:textSize="18sp"
        android:layout_below="@id/titleText"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_button_background"
        android:textColor="#FFFFFF"
        android:layout_margin="16dp"
        android:padding="12dp" />

    <Button
        android:id="@+id/outlinesGameButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Outlines Game"
        android:textSize="18sp"
        android:layout_below="@id/languageGameButton"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button_background"
        android:textColor="#FFFFFF"
        android:layout_margin="16dp"
        android:padding="12dp" />

    <Button
        android:id="@+id/patchesGameButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patches Game"
        android:textSize="18sp"
        android:layout_below="@id/outlinesGameButton"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button_background"
        android:textColor="#FFFFFF"
        android:layout_margin="16dp"
        android:padding="12dp" />

</RelativeLayout>
